<%- include ('../partials/header') %>
<%- include ('../partials/message') %>

<main>
    <div class="regContainer">
        <div class="card border-0 mx-auto" style="width: 30rem; margin-top: 30px;">
            <div class="card-body">
                <h2 style="margin-bottom: 30px;">Register</h2>
                <form action="/register" method="POST">

                    <div style="background-color:#212529; padding: 1rem;" class="nes-field is-inline">
                        <label for="dark_field" style="color:#fff;">username</label>
                        <input type="text" id="dark_field" class="nes-input is-dark" placeholder="dark.css">
                      </div>
                      
                    <div class="mb-3">
                        <label for="dark_field" style="color:#fff;">email</label>
                        <input type="email" class="nes-input is-error" aria-describedby="emailHelp" id="email" name="email">
                    </div>
                    <div class="mb-3">
                        <label for="input_username" class="form-label">Username</label>
                        <input type="text" class="nes-input is-error" id="username" name="username">
                    </div>
                    <div class="mb-3">
                        <label for="input_country" class="form-label">Country</label>
                        <input type="text" class="nes-input is-error" name="country">
                    </div>
                    <div class="mb-3">
                        <label for="input_password" class="form-label">Create Password</label>
                        <input type="password" class="nes-input is-error" name="password">
                    </div>
                    <span>Already have an account? <a href="/login">Login</a></span>
                    <button type="submit" style="float: right;" class="nes-btn is-primary">Register</button>

                    
                </form>
            </div>
        </div>
    </div>
</main>