<%- include ('../partials/header') %>
<%- include ('../partials/message') %>

<main>
    <div class="container">
        <div class="card border-0 mx-auto" style="width: 30rem; margin-top: 30px;">
            <div class="card-body">
                <h2 style="margin-bottom: 30px;">Register</h2>
                <form action="/register" method="POST">
                    <div class="mb-3">
                        <label for="input_email" class="form-label">Email</label>
                        <input type="email" class="form-control" aria-describedby="emailHelp" id="email" name="email">
                    </div>
                    <div class="mb-3">
                        <label for="input_username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username">
                    </div>
                    <div class="mb-3">
                        <label for="input_country" class="form-label">Country</label>
                        <input type="text" class="form-control" name="country">
                    </div>
                    <div class="mb-3">
                        <label for="input_password" class="form-label">Create Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <span>Already have an account? <a href="/login">Login</a></span>
                    <button type="submit" style="float: right;" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</main>